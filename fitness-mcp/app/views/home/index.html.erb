<!-- API Integration Section -->
<div class="card mb-16">
  <div class="card-header">
    <h2 class="text-2xl font-bold text-secondary-100">API Integration Options</h2>
    <p class="text-secondary-400 mt-2">Choose the integration method that best fits your needs</p>
  </div>
  <div class="card-body">
    <div class="grid md:grid-cols-2 gap-8">
      <!-- REST API -->
      <div class="relative">
        <div class="absolute -top-2 -right-2 bg-primary-500 text-white text-xs px-2 py-1 rounded-full">Popular</div>
        <div class="border-2 border-primary-800 rounded-2xl p-6 hover:border-primary-700 transition-colors duration-200">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-gradient-to-r from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-secondary-100">REST API</h3>
          </div>
          <p class="text-secondary-400 mb-4">Standard HTTP requests with API key authentication for manual usage or app integration.</p>
          <div class="bg-secondary-900 rounded-xl p-4 font-mono text-sm text-secondary-300">
            <div class="text-secondary-400 text-xs mb-1">Base URL:</div>
            <code>/api/v1</code>
          </div>
        </div>
      </div>

      <!-- MCP Server -->
      <div class="relative">
        <div class="absolute -top-2 -right-2 bg-success-500 text-white text-xs px-2 py-1 rounded-full">AI Ready</div>
        <div class="border-2 border-success-800 rounded-2xl p-6 hover:border-success-700 transition-colors duration-200">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-gradient-to-r from-success-500 to-success-600 rounded-xl flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-secondary-100">MCP Server</h3>
          </div>
          <p class="text-secondary-400 mb-4">Connect LLMs and AI agents directly to fitness tracking tools via Model Context Protocol.</p>
          <div class="bg-secondary-900 rounded-xl p-4 font-mono text-sm text-secondary-300">
            <div class="text-secondary-400 text-xs mb-1">Start server:</div>
            <code>ruby bin/mcp_server.rb stdio</code>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

