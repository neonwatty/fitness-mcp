<!-- Hero Section -->
<div class="text-center mb-16">
  <div class="animate-fade-in">
    <h1 class="text-5xl md:text-6xl font-bold text-gradient mb-6">
      Fitness MCP Server
    </h1>
    <p class="text-xl md:text-2xl text-secondary-400 mb-8 max-w-3xl mx-auto">
      Personal fitness tracking and planning tool with powerful MCP integration for AI agents
    </p>
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <%= link_to register_path, class: "btn-primary text-lg px-8 py-4 shadow-glow" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
