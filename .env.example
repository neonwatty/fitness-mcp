# Rails Configuration
# Generate with: rails secret
SECRET_KEY_BASE=your_secret_key_base_here

# Database Configuration (if using PostgreSQL in production)
# DATABASE_URL=postgresql://user:password@host:port/database_name

# Google OAuth Configuration
# Required for Google sign-in functionality
# Get these from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Rails Environment Settings
RAILS_ENV=production
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true

# Application Settings
# Set your production domain
APP_HOST=https://your-domain.com

# Optional: Sentry for error tracking
# SENTRY_DSN=your_sentry_dsn_here

# Optional: Redis Configuration (if using Redis)
# REDIS_URL=redis://localhost:6379/0

# Optional: Email Configuration (if sending emails)
# SMTP_ADDRESS=smtp.gmail.com
# SMTP_PORT=587
# SMTP_DOMAIN=your-domain.com
# SMTP_USER_NAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_AUTHENTICATION=plain
# SMTP_ENABLE_STARTTLS_AUTO=true

# MCP Server Configuration (if applicable)
# MCP_SERVER_HOST=0.0.0.0
# MCP_SERVER_PORT=3001