<div class="max-w-md mx-auto">
  <div class="card shadow-medium">
    <div class="card-body">
      <!-- Header with Icon -->
      <div class="text-center mb-8">
        <div class="w-16 h-16 bg-gradient-to-r from-success-500 to-success-600 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-soft">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-secondary-100 mb-2">Create Account</h1>
        <p class="text-secondary-400">Start your fitness journey today</p>
      </div>
      
      <%= form_with model: @user, url: register_path, local: true, class: "space-y-6" do |form| %>
        <!-- Error Messages -->
        <% if @user.errors.any? %>
          <div class="alert alert-error">
            <div class="flex items-start">
              <svg class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.82 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
              </svg>
              <div>
                <div class="font-medium">Please fix the following errors:</div>
                <ul class="mt-1 text-sm list-disc list-inside">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>
        
        <div>
          <%= form.label :email, class: "form-label" %>
          <%= form.email_field :email, class: "form-input", placeholder: "Enter your email address", required: true %>
        </div>
        
        <div>
          <%= form.label :password, class: "form-label" %>
          <%= form.password_field :password, class: "form-input", placeholder: "Create a secure password", required: true %>
          <p class="form-help">Password must be at least 8 characters long</p>
        </div>
        
        <div>
          <%= form.label :password_confirmation, "Confirm Password", class: "form-label" %>
          <%= form.password_field :password_confirmation, class: "form-input", placeholder: "Confirm your password", required: true %>
        </div>
        
        <div class="pt-2">
          <%= form.submit "Create Account", class: "btn-success w-full text-base py-3" %>
        </div>
      <% end %>
      
      <!-- OAuth Sign Up -->
      <div class="relative my-8">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-secondary-700"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-secondary-800 text-secondary-400">Or continue with</span>
        </div>
      </div>
      
      <%= link_to "/auth/google_oauth2", method: :post, class: "btn-secondary w-full text-base py-3 flex items-center justify-center mb-6", data: { turbo_method: :post } do %>
        <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        Sign up with Google
      <% end %>
      
      <!-- Divider -->
      <div class="relative my-8">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-secondary-700"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-secondary-800 text-secondary-400">Already have an account?</span>
        </div>
      </div>
      
      <!-- Login Link -->
      <div class="text-center">
        <%= link_to login_path, class: "btn-secondary w-full text-base py-3" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
          </svg>
          Sign In Instead
        <% end %>
      </div>
    </div>
  </div>
</div>